// ======================================================
// Zenda MVP - Prisma Schema
// ======================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ======================================================
// MODELOS
// ======================================================

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  telefono  String?
  password  String
  rol       String   // "cliente" | "prestador"
  creadoEn  DateTime @default(now())
}
